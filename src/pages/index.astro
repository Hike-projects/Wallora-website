---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <link rel="stylesheet" href="/styles/home.css">
</head>
<body>
  <Header />
  <div class="dashboard-container">
    <div class="dashboard">
      <div class="dashboard-card">
        <div class="dashboard-status">
          <span class="dashboard-status-dot yellow"></span>
          <p class="dashboard-status-text">Maintenance</p>
        </div>
        <div class="dashboard-logo">
          <img src="/wallora-logo.png" alt="Wallora Logo" class="dashboard-logo-img">
        </div>
        <div class="dashboard-info">
          <h1 class="dashboard-title">Wallora</h1>
          <p class="dashboard-description">Wallora Wallpapers</p>
          <p class="dashboard-version">Version: 2.0.0</p>
          <button class="dashboard-download-btn">Download</button>
        </div>
      </div>
    </div>
  </div>
  <Footer />
</body>
</html>
